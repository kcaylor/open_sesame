# Openness Classifier - Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ===========================================
# LLM Provider Selection
# ===========================================
# Options: "claude", "openai", "ollama"
LLM_PROVIDER=claude

# ===========================================
# API Keys (fill in the one you're using)
# ===========================================

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# OpenAI API
OPENAI_API_KEY=sk-your-api-key-here

# ===========================================
# Ollama Configuration (for local models)
# ===========================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3:8b

# ===========================================
# Model Configuration
# ===========================================
# Model names by provider:
#   Claude: claude-3-haiku-20240307 (recommended for testing), claude-3-5-sonnet-20241022 (requires higher tier API access)
#   OpenAI: gpt-4-turbo, gpt-4o, gpt-3.5-turbo
#   Ollama: llama3:8b, mistral:7b, etc.
LLM_MODEL_NAME=claude-3-haiku-20240307

# Sampling parameters
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=750  # Increased for refined taxonomy reasoning with 5-step CoT
LLM_TOP_P=0.95

# ===========================================
# Data Paths
# ===========================================
TRAINING_DATA_PATH=resources/abpoll-open-b71bd12/data/processed/articles_reviewed.csv
LOG_DIR=logs/

# ===========================================
# Classification Settings
# ===========================================
# Number of few-shot examples to use (k for kNN)
FEW_SHOT_K=5

# Embedding model for semantic similarity
EMBEDDING_MODEL=all-MiniLM-L6-v2
